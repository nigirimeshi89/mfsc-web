---
// src/pages/limited/live/[liveId].astro
import Layout from "../../../layouts/Layout.astro";
import { createClient } from "microcms-js-sdk";
import type { MicroCMSListResponse } from "../../../lib/microcms";

// ▼ クライアント作成
const client = createClient({
    serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
    apiKey: import.meta.env.MICROCMS_API_KEY,
});

// ▼ 1. 限定用スライドショー画像の取得
type SliderNews = {
    id: string;
    top_image_isLimited?: { url: string };
};

// ▼▼▼ 修正：ここで「どんなデータが入るか」を明記します ▼▼▼
type VegasImage = { src: string };
let vegasImages: VegasImage[] = [];
// ▲▲▲ 修正ここまで ▲▲▲

try {
    const sliderResponse = await client.get<MicroCMSListResponse<SliderNews>>({
        endpoint: "news",
        queries: {
            fields: ["top_image_isLimited"],
            filters: "top_image_isLimited[exists]",
            limit: 10,
        },
    });
    vegasImages = sliderResponse.contents
        .map((content) => ({
            // @ts-ignore
            src: content.top_image_isLimited?.url || "",
        }))
        .filter((img) => img.src !== "");
} catch (e) {
    console.error("Image Fetch Error:", e);
}

// ▼ 2. 詳細ページ生成
export async function getStaticPaths() {
    const client = createClient({
        serviceDomain: import.meta.env.MICROCMS_SERVICE_DOMAIN,
        apiKey: import.meta.env.MICROCMS_API_KEY,
    });

    const response = await client.get({
        endpoint: "live_info",
        queries: { limit: 100 },
    });

    return response.contents.map((content: any) => ({
        params: { liveId: content.id },
        props: { live: content },
    }));
}

// ▼ 型定義（配列に対応）
interface Props {
    live: {
        id: string;
        title: string;
        date: string;
        flyer?: { url: string }[]; // 画像配列
        content: string;
    };
}

const { live } = Astro.props;
const formatDate = (dateString: string) => {
    const d = new Date(dateString);
    return d
        .toLocaleDateString("ja-JP", {
            timeZone: "Asia/Tokyo",
            year: "numeric",
            month: "numeric",
            day: "numeric",
        })
        .replace(/\//g, ".");
};
---

<Layout title={live.title} isLimited={true}>
    <div id="header-placeholder"></div>

    <section id="vidual-area">
        <div id="slider-area" class="bgextend bgRLextendTrigger">
            <div class="bgappearTrigger">
                <div id="slider"></div>
            </div>
        </div>
        <h2>
            <span class="js_typing">Limited</span><br /><span class="js_typing"
                >Live Report</span
            >
        </h2>
        <div class="scrolldown1"><span>Scroll</span></div>
    </section>

    <main id="main-area">
        <section id="service1">
            <div class="live-header">
                <p class="live-date">{formatDate(live.date)}</p>
                <h2 class="live-title">{live.title}</h2>
            </div>

            <div class="live-content-wrapper">
                {/* フライヤー画像（複数枚対応） */}
                {
                    live.flyer && live.flyer.length > 0 && (
                        <div class="main-flyer">
                            {live.flyer.map((img, index) => (
                                <div
                                    class="flyer-item"
                                    style={index > 0 ? "margin-top: 20px;" : ""}
                                >
                                    <a
                                        href={img.url}
                                        data-fancybox="gallery"
                                        data-caption={`${live.title} Flyer ${index + 1}`}
                                    >
                                        <img
                                            src={img.url}
                                            alt={`${live.title} Flyer ${index + 1}`}
                                        />
                                    </a>
                                </div>
                            ))}
                            <p class="flyer-caption">
                                ※画像をタップすると拡大表示されます
                            </p>
                        </div>
                    )
                }

                <div class="post-content" set:html={live.content} />
            </div>

            <div class="back-btn-area">
                <a href="/limited/live" class="btn04 bordercircle">
                    <span>Back to Archive</span>
                </a>
            </div>
        </section>
    </main>

    {/* ▼▼▼ Vegas用スクリプト ▼▼▼ */}
    <script is:inline define:vars={{ vegasImages }}>
        window.addEventListener("load", function () {
            if (typeof $ === "undefined" || typeof $.fn.vegas === "undefined") {
                console.error("❌ Vegas or jQuery not loaded");
                return;
            }

            // ダミー画像
            const defaultImages = [
                {
                    src: "https://via.placeholder.com/1920x1080/333333/ffffff?text=Vegas+Test",
                },
                { src: "/img/jpg/bg_main_01.jpg" },
            ];

            const finalImages =
                vegasImages && vegasImages.length > 0
                    ? vegasImages
                    : defaultImages;

            $("#slider").vegas({
                overlay: false,
                transition: "blur",
                transitionDuration: 2000,
                delay: 10000,
                animationDuration: 20000,
                animation: "kenburns",
                slides: finalImages,
            });
        });
    </script>

    <style>
        .live-header {
            text-align: center;
            margin-bottom: 40px;
            border-bottom: 2px solid #b22222;
            padding-bottom: 20px;
            display: inline-block;
            width: 100%;
            transition: border-color 0.3s;
        }
        :global(body.light-mode) .live-header {
            border-bottom-color: #0066cc;
        }
        .live-date {
            color: #888;
            font-size: 1rem;
            margin-bottom: 5px;
        }
        .live-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 10px;
            font-family: "Oswald", sans-serif;
            letter-spacing: 0.05em;
        }
        .live-content-wrapper {
            max-width: 800px;
            margin: 0 auto 60px;
            padding: 0 20px;
        }

        .main-flyer {
            margin-bottom: 50px;
            text-align: center;
            width: 100%;
        }

        .flyer-item a {
            display: inline-block;
            cursor: pointer;
            transition: transform 0.3s;
            max-width: 100%;
        }
        .flyer-item a:hover {
            transform: scale(1.02);
        }
        .flyer-item img {
            width: 100%;
            max-width: 600px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            display: block;
            margin: 0 auto;
        }

        .flyer-caption {
            font-size: 0.8rem;
            color: #888;
            margin-top: 10px;
        }
        .post-content :global(iframe) {
            width: 100%;
            aspect-ratio: 16 / 9;
            height: auto;
            margin: 30px 0;
        }
        .post-content :global(h2) {
            font-size: 1.5rem;
            border-left: 5px solid #b22222;
            padding-left: 15px;
            margin: 40px 0 20px;
            transition: border-color 0.3s;
        }
        :global(body.light-mode) .post-content :global(h2) {
            border-left-color: #0066cc;
        }
        .post-content :global(h3) {
            font-size: 1.3rem;
            margin: 30px 0 15px;
            font-weight: bold;
            color: #555;
        }
        .post-content :global(p) {
            line-height: 1.8;
            margin-bottom: 20px;
            font-size: 1.05rem;
        }
        .post-content :global(img) {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 20px 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .back-btn-area {
            text-align: center;
            margin: 60px 0;
        }
        .btn04 {
            display: inline-block;
            color: #fff;
            border: 1px solid #fff;
            padding: 10px 40px;
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s;
        }
        .btn04:hover {
            background: #fff;
            color: #333;
        }
        :global(body.light-mode) .btn04 {
            color: #333;
            border-color: #333;
        }
        :global(body.light-mode) .btn04:hover {
            background: #333;
            color: #fff;
        }
        @media (max-width: 768px) {
            .live-title {
                font-size: 1.5rem;
            }
            .main-flyer img {
                max-width: 100%;
            }
        }
    </style>
</Layout>
