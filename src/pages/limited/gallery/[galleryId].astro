---
// src/pages/limited/gallery/[galleryId].astro
import Layout from "../../../layouts/Layout.astro";
import { client } from "../../../lib/microcms";
import type { MicroCMSListResponse } from "../../../lib/microcms";

// ▼ 1. 限定用スライドショー画像の取得
type SliderNews = {
    id: string;
    top_image_isLimited?: { url: string };
};

const sliderResponse = await client.get<MicroCMSListResponse<SliderNews>>({
    endpoint: "news",
    queries: {
        fields: ["top_image_isLimited"],
        filters: "top_image_isLimited[exists]",
        limit: 10,
    },
});

const vegasImages = sliderResponse.contents.map((content) => ({
    // @ts-ignore
    src: content.top_image_isLimited.url,
}));

// ▼ 2. ギャラリーデータの定義
type GalleryImage = {
    url: string;
    height: number;
    width: number;
};

type Gallery = {
    id: string;
    title: string;
    date: string;
    images: GalleryImage[];
};

// ▼ 3. 詳細ページ生成
export async function getStaticPaths() {
    // 共通のclientを使って取得
    const response = await client.get<MicroCMSListResponse<Gallery>>({
        endpoint: "galleries",
        queries: { limit: 100 },
    });

    return response.contents.map((content) => ({
        params: { galleryId: content.id },
        props: { gallery: content },
    }));
}

interface Props {
    gallery: Gallery;
}

const { gallery } = Astro.props;

// ▼▼▼ 修正: 日付を強制的に日本時間で計算してズレを防止 ▼▼▼
const d = new Date(gallery.date);
const formattedDate = d
    .toLocaleDateString("ja-JP", {
        timeZone: "Asia/Tokyo",
        year: "numeric",
        month: "numeric",
        day: "numeric",
    })
    .replace(/\//g, ".");
// ▲▲▲ 修正ここまで ▲▲▲
---

<Layout title={gallery.title} isLimited={true}>
    <div id="header-placeholder"></div>

    <section id="vidual-area">
        <div id="slider-area" class="bgextend bgRLextendTrigger">
            <div class="bgappearTrigger">
                <div id="slider"></div>
            </div>
        </div>
        <h2>
            <span class="js_typing">{formattedDate}</span><br /><span
                class="js_typing">GALLERY</span
            >
        </h2>
        <dl>
            <dt>Follow Us</dt>
            <dd>
                <ul>
                    <li>
                        <a href="https://x.com/momotenguitar">
                            <svg
                                width="20"
                                height="20"
                                viewBox="0 0 1200 1227"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
                                    fill="white"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/mfsc_modern/?hl=ja">
                            <img
                                src="/img/main/ico_insta.svg"
                                alt="Instagram"
                            />
                        </a>
                    </li>
                </ul>
            </dd>
        </dl>
        <div class="scrolldown1"><span>Scroll</span></div>
    </section>

    <main id="main-area">
        <section id="service1">
            <h2 class="js_typing">{gallery.title}</h2>

            <div class="gallery-container">
                {/* 画像がある場合のみ表示 */}
                {
                    gallery.images && gallery.images.length > 0 ? (
                        <ul class="gallery-grid">
                            {gallery.images.map((item) => (
                                <li>
                                    <a
                                        href={item.url}
                                        data-lightbox="gallery"
                                        data-title={gallery.title}
                                    >
                                        <img
                                            src={item.url}
                                            alt="Gallery Image"
                                            loading="lazy"
                                        />
                                    </a>
                                </li>
                            ))}
                        </ul>
                    ) : (
                        <p style="text-align:center; color:#fff;">
                            写真がまだありません。
                        </p>
                    )
                }
            </div>

            <div class="back-btn-area">
                <a href="/limited/gallery" class="btn04 bordercircle"
                    ><span>一覧に戻る</span></a
                >
            </div>
        </section>
    </main>

    <script is:inline define:vars={{ vegasImages }}>
        window.addEventListener("load", function () {
            if (typeof $ === "undefined" || typeof $.fn.vegas === "undefined") {
                console.error("Vegas or jQuery not loaded");
                return;
            }

            // 限定用画像が1枚もなかった場合のデフォルト画像
            const defaultImages = [{ src: "/img/jpg/bg_main_01.jpg" }];

            const finalImages =
                vegasImages.length > 0 ? vegasImages : defaultImages;

            $("#slider").vegas({
                overlay: false,
                transition: "blur",
                transitionDuration: 2000,
                delay: 10000,
                animationDuration: 20000,
                animation: "kenburns",
                slides: finalImages,
            });
        });
    </script>

    <style>
        /* === ギャラリーグリッドのデザイン === */
        .gallery-container {
            max-width: 1000px;
            margin: 0 auto 50px auto;
            padding: 0 20px;
        }

        .gallery-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px; /* 画像同士の隙間 */
            justify-content: center;
            list-style: none;
            padding: 0;
        }

        .gallery-grid li {
            width: calc(33.333% - 10px);
            /* 3列表示 */
            aspect-ratio: 1 / 1;
            /* 正方形にトリミング */
            overflow: hidden;
            position: relative;
        }

        .gallery-grid li a {
            display: block;
            width: 100%;
            height: 100%;
            transition: opacity 0.3s;
        }

        .gallery-grid li a:hover {
            opacity: 0.7;
        }

        .gallery-grid img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* 枠いっぱいに広げる */
            display: block;
        }

        /* 戻るボタン周り */
        .back-btn-area {
            text-align: center;
            margin: 60px 0;
        }

        /* ボタンデザイン */
        .btn04 {
            display: inline-block;
            color: #fff;
            border: 1px solid #fff;
            padding: 10px 40px;
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s;
        }
        .btn04:hover {
            background: #fff;
            color: #333;
        }

        /* ▼▼▼ 追加：ライトモード時のボタン色修正 ▼▼▼ */
        :global(body.light-mode) .btn04,
        :global(body.light) .btn04 {
            color: #333;
            border-color: #333;
        }
        :global(body.light-mode) .btn04:hover,
        :global(body.light) .btn04:hover {
            background: #333;
            color: #fff;
        }
        /* ▲▲▲ 追加ここまで ▲▲▲ */

        /* === スマホ対応 === */
        @media (max-width: 768px) {
            .gallery-grid li {
                width: calc(50% - 10px);
                /* スマホは2列 */
            }
        }
    </style>
</Layout>
