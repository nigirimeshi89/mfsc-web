import { client } from "../../lib/microcms"; // â€»éšå±¤ã«åˆã‚ã›ã¦ ../ ã®æ•°ã‚’èª¿æ•´
import type { MicroCMSListResponse } from "../../lib/microcms";

// const client = ... ã®è¡Œã¯å‰Šé™¤ï¼

type Live = {
    id: string;
    title: string;
    date: string;
    flyer?: { url: string };
    content: string;
};

const response = await client.get<MicroCMSListResponse<Live>>({
    endpoint: "live_info", // â˜…ã”è‡ªèº«ã®ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆåã«åˆã‚ã›ã¦ãã ã•ã„
    queries: {
        limit: 100,
        orders: "-date",
    },
});

// å¹´åº¦ã”ã¨ã®ã‚°ãƒ«ãƒ¼ãƒ—åˆ†ã‘å‡¦ç†
const groupedLives: Record<number, Live[]> = {};

response.contents.forEach((live) => {
    const d = new Date(live.date);
    const year = d.getFullYear();
    const month = d.getMonth() + 1;
    const fiscalYear = month < 4 ? year - 1 : year;

    if (!groupedLives[fiscalYear]) {
        groupedLives[fiscalYear] = [];
    }
    groupedLives[fiscalYear].push(live);
});

const sortedYears = Object.keys(groupedLives)
    .map(Number)
    .sort((a, b) => b - a);

const formatDate = (dateString: string) => {
    const d = new Date(dateString);
    return `${d.getFullYear()}.${d.getMonth() + 1}.${d.getDate()}`;
};
