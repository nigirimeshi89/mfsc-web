// src/pages/limited/live.astro
import Layout from "../../layouts/Layout.astro";
import { client } from "../../lib/microcms";
import type { MicroCMSListResponse } from "../../lib/microcms";

// ‚ñº ÈôêÂÆöÁî®„Çπ„É©„Ç§„Éâ„Ç∑„Éß„ÉºÁîªÂÉè„ÅÆÂûãÂÆöÁæ©
type SliderNews = {
    id: string;
    top_image_isLimited?: { url: string };
};

// ‚ñº ÈôêÂÆöÁî®ÁîªÂÉè(top_image_isLimited)„ÇíÂèñÂæó
const sliderResponse = await client.get<MicroCMSListResponse<SliderNews>>({
    endpoint: "news",
    queries: {
        fields: ["top_image_isLimited"],
        filters: "top_image_isLimited[exists]",
        limit: 10,
    },
});

// ‚ñº ÁîªÂÉè„Éá„Éº„Çø„ÅÆÊäΩÂá∫ÔºàÂÆâÂÖ®ÂØæÁ≠ñÊ∏à„ÅøÔºâ
const vegasImages = sliderResponse.contents
    .map((content) => ({
        // @ts-ignore
        src: content.top_image_isLimited?.url,
    }))
    .filter((img) => img.src);

type Live = {
    id: string;
    title: string;
    date: string;
    flyer?: { url: string };
    content: string;
};

const response = await client.get<MicroCMSListResponse<Live>>({
    endpoint: "live_info",
    queries: {
        limit: 100,
        orders: "-date",
    },
});

// ‚ñº Âπ¥Â∫¶„Åî„Å®„ÅÆ„Ç∞„É´„Éº„ÉóÂàÜ„ÅëÂá¶ÁêÜ
const groupedLives: Record<number, Live[]> = {};
response.contents.forEach((live) => {
    const d = new Date(live.date);
    const jstDate = new Date(
        d.toLocaleString("en-US", { timeZone: "Asia/Tokyo" }),
    );

    const year = jstDate.getFullYear();
    const month = jstDate.getMonth() + 1;
    const fiscalYear = month < 4 ? year - 1 : year;

    if (!groupedLives[fiscalYear]) {
        groupedLives[fiscalYear] = [];
    }
    groupedLives[fiscalYear].push(live);
});

const sortedYears = Object.keys(groupedLives)
    .map(Number)
    .sort((a, b) => b - a);

// ‚ñº Êó•‰ªòË°®Á§∫Áî®Èñ¢Êï∞
const formatDate = (dateString: string) => {
    const d = new Date(dateString);
    return d
        .toLocaleDateString("ja-JP", {
            timeZone: "Asia/Tokyo",
            year: "numeric",
            month: "numeric",
            day: "numeric",
        })
        .replace(/\//g, ".");
};
---

<Layout title="LIMITED_LIVE" isLimited={true}>
    <div id="header-placeholder"></div>

    <section id="vidual-area">
        <div id="slider-area" class="bgextend bgRLextendTrigger">
            <div class="bgappearTrigger">
                <div id="slider"></div>
            </div>
        </div>
        <h2>
            <span class="js_typing">Limited</span><br /><span class="js_typing"
                >Live Archive</span
            >
        </h2>
        <dl>
            <dt>Follow Us</dt>
            <dd>
                <ul>
                    <li>
                        <a href="https://x.com/momotenguitar">
                            <svg
                                width="20"
                                height="20"
                                viewBox="0 0 1200 1227"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
                                    fill="white"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/mfsc_modern/?hl=ja">
                            <img
                                src="/img/main/ico_insta.svg"
                                alt="Instagram"
                            />
                        </a>
                    </li>
                </ul>
            </dd>
        </dl>

        <div class="scrolldown1"><span>Scroll</span></div>
    </section>

    <main id="main-area">
        <section id="service1">
            <h2 class="js_typing">Live Archive</h2>
            <p style="text-align:center; margin-bottom:40px;">
                ÈÅéÂéª„ÅÆ„É©„Ç§„ÉñÊò†ÂÉè„ÇÑ„Çª„ÉÉ„Éà„É™„Çπ„Éà„ÇíÂÖ¨Èñã‰∏≠ÔºÅ<br />
                „Çø„Ç§„Éà„É´„Çí„ÇØ„É™„ÉÉ„ÇØ„Åó„Å¶Ë©≥Á¥∞„Çí„ÉÅ„Çß„ÉÉ„ÇØ„Åó„Å¶„Å≠üëá
            </p>

            <section class="details-wrapper">
                <div class="live-archive-container">
                    {/* ‚ñº‚ñº‚ñº „Çø„ÉñÂàá„ÇäÊõø„Åà„Éú„Çø„É≥ ‚ñº‚ñº‚ñº */}
                    <ul class="year-tabs">
                        {
                            sortedYears.map((year, index) => (
                                <li
                                    class={`tab-item ${index === 0 ? "active" : ""}`}
                                    data-target={`year-${year}`}
                                >
                                    {year}Âπ¥Â∫¶
                                </li>
                            ))
                        }
                    </ul>

                    {/* ‚ñº‚ñº‚ñº „Ç≥„É≥„ÉÜ„É≥„ÉÑ„Ç®„É™„Ç¢ ‚ñº‚ñº‚ñº */}
                    <div class="tab-contents">
                        {
                            sortedYears.map((year, index) => (
                                <div
                                    id={`year-${year}`}
                                    class={`year-section ${index === 0 ? "is-show" : ""}`}
                                >
                                    <ul class="live-list">
                                        {groupedLives[year].map((live) => (
                                            <li class="live-item">
                                                <a
                                                    href={`/limited/live/${live.id}`}
                                                    class="live-link"
                                                >
                                                    <div class="live-info">
                                                        <span class="live-date">
                                                            {formatDate(
                                                                live.date,
                                                            )}
                                                        </span>
                                                        <h3 class="live-title">
                                                            {live.title}
                                                        </h3>
                                                    </div>
                                                    <div class="arrow">‚Üí</div>
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </section>
        </section>
    </main>

    {/* ‚ñº‚ñº‚ñº „Çπ„ÇØ„É™„Éó„ÉàÁæ§ ‚ñº‚ñº‚ñº */}
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const tabs = document.querySelectorAll(".tab-item");
            const contents = document.querySelectorAll(".year-section");

            tabs.forEach((tab) => {
                tab.addEventListener("click", () => {
                    tabs.forEach((t) => t.classList.remove("active"));
                    tab.classList.add("active");

                    contents.forEach((c) => c.classList.remove("is-show"));

                    const targetId = tab.getAttribute("data-target");
                    if (targetId) {
                        const targetContent = document.getElementById(targetId);
                        if (targetContent) {
                            targetContent.classList.add("is-show");
                        }
                    }
                });
            });
        });
    </script>

    <script is:inline define:vars={{ vegasImages }}>
        window.addEventListener("load", function () {
            if (typeof $ === "undefined" || typeof $.fn.vegas === "undefined") {
                console.error("Vegas or jQuery not loaded");
                return;
            }

            const defaultImages = [{ src: "/img/jpg/bg_main_01.jpg" }];
            const finalImages =
                vegasImages && vegasImages.length > 0
                    ? vegasImages
                    : defaultImages;

            $("#slider").vegas({
                overlay: false,
                transition: "blur",
                transitionDuration: 2000,
                delay: 10000,
                animationDuration: 20000,
                animation: "kenburns",
                slides: finalImages,
            });
        });
    </script>

    <style>
        .live-archive-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .year-tabs {
            display: flex;
            justify-content: flex-start;
            flex-wrap: wrap;
            list-style: none;
            padding: 0;
            margin: 0 0 30px 0;
            border-bottom: 1px solid #333;
        }

        .tab-item {
            padding: 10px 20px;
            background: #333;
            color: #aaa;
            cursor: pointer;
            margin-right: 2px;
            font-family: "Oswald", sans-serif;
            font-size: 1.1rem;
            transition: all 0.3s;
            border-top: 1px solid transparent;
            border-left: 1px solid transparent;
            border-right: 1px solid transparent;
        }

        .tab-item:hover {
            background: #444;
            color: #fff;
        }

        .tab-item.active {
            background: #000;
            color: #fff;
            border-color: #555;
            border-bottom: 1px solid #000;
            margin-bottom: -1px;
        }

        :global(body.light-mode) .year-tabs,
        :global(body.light) .year-tabs {
            border-bottom-color: #ccc;
        }
        :global(body.light-mode) .tab-item,
        :global(body.light) .tab-item {
            background: #eee;
            color: #666;
        }
        :global(body.light-mode) .tab-item:hover,
        :global(body.light) .tab-item:hover {
            background: #ddd;
        }
        :global(body.light-mode) .tab-item.active,
        :global(body.light) .tab-item.active {
            background: #fff;
            color: #0066cc;
            border-color: #ccc;
            border-bottom-color: #fff;
        }

        .year-section {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        .year-section.is-show {
            display: block;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .live-list {
            padding: 0;
            list-style: none;
            margin: 0;
        }

        .live-item {
            border-bottom: 1px solid #333;
            transition: all 0.3s ease;
        }

        .live-item:first-child {
            border-top: 1px solid #333;
        }

        .live-item:hover {
            background-color: rgba(178, 34, 34, 0.05);
            border-color: #b22222;
        }
        :global(body.light-mode) .live-item:hover,
        :global(body.light) .live-item:hover {
            background-color: rgba(0, 102, 204, 0.05);
            border-color: #0066cc;
        }

        .live-link {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            color: #333;
            text-decoration: none;
            width: 100%;
        }

        .live-info {
            display: flex;
            flex-direction: column;
        }

        .live-date {
            font-size: 0.9rem;
            color: #888;
            margin-bottom: 5px;
            font-family: "Oswald", sans-serif;
        }

        .live-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin: 0;
            transition: color 0.3s;
        }

        .live-item:hover .live-title {
            color: #b22222;
        }
        :global(body.light-mode) .live-item:hover .live-title,
        :global(body.light) .live-item:hover .live-title {
            color: #0066cc;
        }

        .arrow {
            font-size: 1.2rem;
            color: #ccc;
            transition:
                transform 0.3s,
                color 0.3s;
        }

        .live-item:hover .arrow {
            color: #b22222;
            transform: translateX(5px);
        }
        :global(body.light-mode) .live-item:hover .arrow,
        :global(body.light) .live-item:hover .arrow {
            color: #0066cc;
        }

        @media (max-width: 768px) {
            .live-link {
                padding: 15px;
            }
            .live-title {
                font-size: 1rem;
            }
            .tab-item {
                padding: 8px 15px;
                font-size: 0.9rem;
            }
        }
    </style>
</Layout>
