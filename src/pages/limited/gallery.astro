---
// src/pages/limited/gallery.astro
import Layout from "../../layouts/Layout.astro";
import { client } from "../../lib/microcms";
import type { MicroCMSListResponse } from "../../lib/microcms";

type Gallery = {
    id: string;
    title: string;
    date: string;
    isNew: boolean;
    isLimited?: boolean;
    images: any[];
};

// ▼▼▼ 限定記事のみを取得 ▼▼▼
const response = await client.get<MicroCMSListResponse<Gallery>>({
    endpoint: "galleries",
    queries: {
        limit: 100,
        orders: "-date",
        filters: "isLimited[equals]true",
    },
});

const groupedGalleries: Record<number, Gallery[]> = {};
response.contents.forEach((gallery) => {
    const d = new Date(gallery.date);
    const year = d.getFullYear();
    const month = d.getMonth() + 1;
    const fiscalYear = month < 4 ? year - 1 : year;
    if (!groupedGalleries[fiscalYear]) {
        groupedGalleries[fiscalYear] = [];
    }
    groupedGalleries[fiscalYear].push(gallery);
});

const sortedYears = Object.keys(groupedGalleries)
    .map(Number)
    .sort((a, b) => b - a);

const formatDate = (dateString: string) => {
    const d = new Date(dateString);
    return `${d.getFullYear()}.${d.getMonth() + 1}.${d.getDate()}`;
};
---

<Layout title="GALLERY (Limited) | MFSC" isLimited={true}>
    <div id="header-placeholder"></div>

    <section id="vidual-area">
        <div id="slider-area" class="bgextend bgRLextendTrigger">
            <div class="bgappearTrigger">
                <div id="slider"></div>
            </div>
        </div>
        <h2>
            <span class="js_typing">Limited</span><br /><span class="js_typing"
                >Gallery</span
            >
        </h2>
        <div class="scrolldown1"><span>Scroll</span></div>
    </section>

    <main id="main-area">
        <section id="service1">
            <h2 class="js_typing">Limited Gallery</h2>

            {/* ▼▼▼ テキスト変更：シンプルに ▼▼▼ */}
            <p style="text-align:center; margin-bottom:40px;">
                一般公開されていない限定写真です。
            </p>

            <section class="details-wrapper">
                <div class="corner-title">
                    {
                        sortedYears.map((year) => (
                            <div class="year-section">
                                <h3 class="js_typing year-title">{year}年度</h3>
                                <ul class="gallery-grid">
                                    {groupedGalleries[year].map((gallery) => (
                                        <li class="gallery-item">
                                            {gallery.isNew && (
                                                <div class="new">
                                                    <p>New!</p>
                                                </div>
                                            )}

                                            {/* ▼▼▼ 修正：SECRETバッジを削除しました ▼▼▼ */}

                                            <a
                                                href={`/limited/gallery/${gallery.id}`}
                                                class="gallery-link"
                                            >
                                                <div class="img-box">
                                                    {gallery.images &&
                                                    gallery.images.length >
                                                        0 ? (
                                                        <img
                                                            src={
                                                                gallery
                                                                    .images[0]
                                                                    .url
                                                            }
                                                            alt={gallery.title}
                                                        />
                                                    ) : (
                                                        <div class="no-image">
                                                            No Image
                                                        </div>
                                                    )}
                                                </div>

                                                <div class="text-overlay">
                                                    <div class="text-content">
                                                        <p class="date">
                                                            {formatDate(
                                                                gallery.date,
                                                            )}
                                                        </p>
                                                        <h4 class="title">
                                                            {gallery.title}
                                                        </h4>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        ))
                    }
                </div>
            </section>
        </section>
    </main>

    <script is:inline>
        window.addEventListener("load", function () {
            if (typeof $ === "undefined" || typeof $.fn.vegas === "undefined")
                return;
            $("#slider").vegas({
                overlay: false,
                transition: "blur",
                transitionDuration: 2000,
                delay: 10000,
                animationDuration: 20000,
                animation: "kenburns",
                slides: [{ src: "/img/jpg/bg_main_01.jpg" }],
            });
        });
    </script>

    <style>
        .year-title {
            font-size: 1.5rem;
            margin: 40px 0 20px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
            width: 100%;
        }
        .gallery-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 0;
            list-style: none;
        }

        .gallery-item {
            position: relative;
            width: calc(50% - 10px);
            aspect-ratio: 16 / 9;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .gallery-link {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            color: #fff;
        }

        .img-box {
            width: 100%;
            height: 100%;
            background: #333;
            border-radius: 0 !important;
        }
        .img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
            border-radius: 0 !important;
        }

        .gallery-item:hover .img-box img {
            transform: scale(1.1);
        }

        .text-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            padding: 20px;
        }
        .gallery-item:hover .text-overlay {
            opacity: 1;
        }
        .text-content {
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }
        .gallery-item:hover .text-content {
            transform: translateY(0);
        }

        .date {
            font-size: 0.9rem;
            margin-bottom: 5px;
            color: #ccc;
        }
        .title {
            font-size: 1.2rem;
            font-weight: bold;
            line-height: 1.4;
            margin: 0;
        }
        .no-image {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #aaa;
            font-size: 0.8rem;
        }
        .new {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 5;
        }

        /* SECRETバッジ用のCSSは不要になったため削除しました */

        @media (max-width: 768px) {
            .gallery-item {
                width: 100%;
            }
        }
    </style>
</Layout>
