---
// src/pages/limited/gallery.astro
import Layout from "../../layouts/Layout.astro";
// ‰Ωú„Å£„ÅüÂÖ±ÈÄö„Éï„Ç°„Ç§„É´„ÇíË™≠„ÅøËæº„ÇÄ„Å†„ÅëÔºÅ
import { client } from "../../lib/microcms"; // ‚ÄªÈöéÂ±§„Å´Âêà„Çè„Åõ„Å¶ ../ „ÅÆÊï∞„ÇíË™øÊï¥
import type { MicroCMSListResponse } from "../../lib/microcms";

// const client = ... „ÅÆË°å„ÅØÂâäÈô§ÔºÅ

type Gallery = {
    id: string;
    title: string;
    date: string;
    isNew: boolean;
    isLimited?: boolean;
    images: any[];
};

// ÈôêÂÆöÁî®Ôºö„ÄåÂÖ®‰ª∂„ÄçÂèñÂæó
const response = await client.get<MicroCMSListResponse<Gallery>>({
    endpoint: "galleries",
    queries: {
        limit: 100,
        orders: "-date",
    },
});

const groupedGalleries: Record<number, Gallery[]> = {};
response.contents.forEach((gallery) => {
    const d = new Date(gallery.date);
    const year = d.getFullYear();
    const month = d.getMonth() + 1;
    const fiscalYear = month < 4 ? year - 1 : year;
    if (!groupedGalleries[fiscalYear]) {
        groupedGalleries[fiscalYear] = [];
    }
    groupedGalleries[fiscalYear].push(gallery);
});
const sortedYears = Object.keys(groupedGalleries)
    .map(Number)
    .sort((a, b) => b - a);

const formatDate = (dateString: string) => {
    const d = new Date(dateString);
    return `${d.getFullYear()}.${d.getMonth() + 1}.${d.getDate()}`;
};
---

<Layout title="GALLERY (Limited) | MFSC" isLimited={true}>
    <div id="header-placeholder"></div>

    <section id="vidual-area">
        <div id="slider-area" class="bgextend bgRLextendTrigger">
            <div class="bgappearTrigger">
                <div id="slider"></div>
            </div>
        </div>
        <h2>
            <span class="js_typing">Limited</span><br /><span class="js_typing"
                >Gallery</span
            >
        </h2>
        <div class="scrolldown1"><span>Scroll</span></div>
    </section>

    <main id="main-area">
        <section id="service1">
            <h2 class="js_typing">Limited Gallery</h2>
            <p style="text-align:center; margin-bottom:40px;">
                <span style="color:#b22222; font-weight:bold;">üîí SECRET</span> „Éû„Éº„ÇØ„Åå„Å§„ÅÑ„Å¶„ÅÑ„Çã„ÇÇ„ÅÆ„ÅØ<br
                />
                ‰∏ÄËà¨ÂÖ¨Èñã„Åï„Çå„Å¶„ÅÑ„Å™„ÅÑÈôêÂÆöÂÜôÁúü„Åß„Åô„ÄÇ
            </p>

            <section class="details-wrapper">
                <div class="corner-title">
                    {
                        sortedYears.map((year) => (
                            <div class="year-section">
                                <h3 class="js_typing year-title">{year}Âπ¥Â∫¶</h3>
                                <ul class="gallery-grid">
                                    {groupedGalleries[year].map((gallery) => (
                                        <li
                                            class={`gallery-item ${gallery.isLimited ? "item-limited" : ""}`}
                                        >
                                            {gallery.isNew &&
                                                !gallery.isLimited && (
                                                    <div class="new">
                                                        <p>New!</p>
                                                    </div>
                                                )}

                                            {gallery.isLimited && (
                                                <div class="secret-badge">
                                                    <p>üîí SECRET</p>
                                                </div>
                                            )}

                                            <a
                                                href={`/limited/gallery/${gallery.id}`}
                                                class="gallery-link"
                                            >
                                                <div class="img-box">
                                                    {gallery.images &&
                                                    gallery.images.length >
                                                        0 ? (
                                                        <img
                                                            src={
                                                                gallery
                                                                    .images[0]
                                                                    .url
                                                            }
                                                            alt={gallery.title}
                                                        />
                                                    ) : (
                                                        <div class="no-image">
                                                            No Image
                                                        </div>
                                                    )}
                                                </div>

                                                <div class="text-overlay">
                                                    <div class="text-content">
                                                        <p class="date">
                                                            {formatDate(
                                                                gallery.date,
                                                            )}
                                                        </p>
                                                        <h4 class="title">
                                                            {gallery.title}
                                                        </h4>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        ))
                    }
                </div>
            </section>
        </section>
    </main>

    <style>
        .year-title {
            font-size: 1.5rem;
            margin: 40px 0 20px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
            width: 100%;
        }
        .gallery-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 0;
            list-style: none;
        }

        .gallery-item {
            position: relative;
            width: calc(50% - 10px);
            aspect-ratio: 16 / 9;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .gallery-link {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            color: #fff;
        }

        /* ‚ñº‚ñº‚ñº ‰øÆÊ≠£„Éù„Ç§„É≥„ÉàÔºö„Åì„Åì„ÇÇÂº∑Âà∂ÁöÑ„Å´ÂõõËßí„ÅèÔºÅ ‚ñº‚ñº‚ñº */
        .img-box {
            width: 100%;
            height: 100%;
            background: #333;
            border-radius: 0 !important;
        }
        .img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
            border-radius: 0 !important;
        }
        /* ‚ñ≤‚ñ≤‚ñ≤ ‰øÆÊ≠£„Éù„Ç§„É≥„Éà„Åì„Åì„Åæ„Åß ‚ñ≤‚ñ≤‚ñ≤ */

        .gallery-item:hover .img-box img {
            transform: scale(1.1);
        }

        .text-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            padding: 20px;
        }
        .gallery-item:hover .text-overlay {
            opacity: 1;
        }
        .text-content {
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }
        .gallery-item:hover .text-content {
            transform: translateY(0);
        }

        .date {
            font-size: 0.9rem;
            margin-bottom: 5px;
            color: #ccc;
        }
        .title {
            font-size: 1.2rem;
            font-weight: bold;
            line-height: 1.4;
            margin: 0;
        }
        .no-image {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #aaa;
            font-size: 0.8rem;
        }
        .new {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 5;
        }

        .item-limited {
            border: 2px solid #b22222;
        }
        .secret-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: #b22222;
            color: #fff;
            padding: 5px 10px;
            font-size: 0.8rem;
            font-weight: bold;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            z-index: 5;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }

        @media (max-width: 768px) {
            .gallery-item {
                width: 100%;
            }
        }
    </style>
</Layout>
